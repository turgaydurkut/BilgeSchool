@model IEnumerable<Ntier.BilgeSchool.Model.Entity.Family>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h3 class="text-primary"><b>Öğrenci Veli Liste</b></h3>
<br />



<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>SoyAdı</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Duzenle</th>
                    <th>Detay</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>


                        <td>@Html.ActionLink("Düzenle", "Edit", new { id = item.ID })</td>
                        <td>@Html.ActionLink("Detay", "Details", new { id = item.ID })</td>
                        <td>
                            @Html.ActionLink("Sil", "Delete", new { id = item.ID })


                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>