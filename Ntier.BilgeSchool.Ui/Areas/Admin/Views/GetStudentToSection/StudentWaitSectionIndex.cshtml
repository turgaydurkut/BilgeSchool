@model IEnumerable<Ntier.BilgeSchool.Model.Entity.Student>

@{
    ViewBag.Title = "StudentWaitSectionIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="text-primary"><b>Şubeye Atama Bekleyen Öğrenciler Listesi</b></h3>
<br />

<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Okul No</th>
                    <th>Ad</th>
                    <th>SoyAd</th>
                    <th>Duzenle</th>
                    <th>Sil</th>
                    <th>Şube/Atama</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.StudentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentLastName)
                    </td>
                    <td>@Html.ActionLink("Düzenle", "GetStudentSection", new { id = item.ID })</td>

                    <td>
                        @Html.ActionLink("Sil", "StudentDelete", new { id = item.ID })


                    </td>
                    <td>
                        @Html.ActionLink("Şubeye Atama", "GetStudentSection", new { id = item.ID }, new { @class = "btn btn-primary" })


                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>
