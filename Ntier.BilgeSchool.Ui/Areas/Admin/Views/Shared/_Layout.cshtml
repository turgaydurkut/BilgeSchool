<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Areas/Content/img/favicon.png">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Areas/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Areas/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Areas/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Areas/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Areas/Content/css/style.css" rel="stylesheet">
    <link href="~/Areas/Content/css/style-responsive.css" rel="stylesheet" />
    
   
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="~/Admin/Home/index" class="logo">Bilge<span>Koleji</span></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">


                            <span class="username"><span class="text text-justify">Hoşgeldin! </span>@Session["user"]</span>
                            <b class="caret"></b>


                        </a>
                        <ul class="dropdown-menu extended logout">

                            <li><a href="~/AdminLogin/Login">Log Out</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="~/Admin/Home/index">
                            <i class="icon-dashboard"></i>
                            <span>Bilge Koleji</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>ÖnKayit</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Önkayıt Giriş", "Create", "Student")</li>
                            <li>@Html.ActionLink("Önkayıt Liste", "Index", "Student")</li>
                            @*<li><a href="language_switch_bar.html">Language Switch Bar</a></li>*@
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-beaker"></i>
                            <span>Eğitim Öğretim Yılı</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Eğitim Yılı Gir", "Create", "EducationYear")</li>
                            <li>@Html.ActionLink("Eğitim Yılı Liste", "Index", "EducationYear")</li>
                            <li>@Html.ActionLink("Dönem Ekle", "Create", "Period")</li>
                            <li>@Html.ActionLink("Dönem Liste", "Index", "Period")</li>

                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-book"></i>
                            <span>Dersler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Ders Ekle", "Create", "Course")</li>
                            <li>@Html.ActionLink("Ders Liste", "Index", "Course")</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-cogs"></i>
                            <span>DersKodları</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Ders Kodu Ekle", "Create", "CourseCode")</li>
                            <li>@Html.ActionLink("Ders Kodu Liste", "Index", "CourseCode")</li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-tasks"></i>
                            <span>Sınıflar</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Sınıf Ekle", "Create", "Classroom")</li>
                            <li>@Html.ActionLink("Sınıf Liste", "Index", "Classroom")</li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th"></i>
                            <span>Şubeler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Şube Ekle", "Create", "Section")</li>
                            <li>@Html.ActionLink("Şube Liste", "Index", "Section")</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class=" icon-bar-chart"></i>
                            <span>Öğretmenler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Öğretmen Ekle", "Create", "Teacher")</li>
                            <li>@Html.ActionLink("Öğretmen Liste", "Index", "Teacher")</li>
                            <li>@Html.ActionLink("Branş Ekle", "Create", "Branch")</li>
                            <li>@Html.ActionLink("Branş Liste", "Index", "Branch")</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-apple"></i>
                            <span>Öğrenci</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Öğrenci Atama", "StudentWaitSectionIndex", "GetStudentToSection")</li>
                           
                            <li>@Html.ActionLink("Notlar-Rapor", "GetStudentPoint", "StudentPoint")</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="glyphicon-tower"></i>
                            <span>Veliler</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Veli Liste", "Index", "Family")</li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-asterisk"></i>
                            <span>Kullanıcılar</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Kullanıcı Oluştur", "Create", "AppUser")</li>
                            <li>@Html.ActionLink("Kullanıcı Liste", "Index", "AppUser")</li>
                        </ul>
                    </li>
                    <!--multi level menu start-->
                    <!--multi level menu end-->

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!--state overview start-->
                <!--state overview end-->

                @RenderBody()

            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <!--footer end-->
    </section>
    <footer class="site-footer">
        <div class="text-center">
            @DateTime.Now.Year &copy; Bilge Koleji.
            <a href="#" class="go-top">
                <i class="icon-angle-up"></i>
            </a>
        </div>
    </footer>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Areas/Content/js/jquery.js"></script>
    <script src="~/Areas/Content/js/jquery-1.8.3.min.js"></script>
    <script src="~/Areas/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Areas/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Content/js/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Areas/Content/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/Areas/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/Areas/Content/js/owl.carousel.js"></script>
    <script src="~/Areas/Content/js/jquery.customSelect.min.js"></script>

    <script type="text/javascript" src="~/Areas/Content/assets/data-tables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Areas/Content/assets/data-tables/DT_bootstrap.js"></script>
    <script src="~/Areas/Content/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="~/Areas/Content/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="~/Areas/Content/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/Areas/Content/js/editable-table.js"></script>
    <script src="~/Areas/Content/js/sparkline-chart.js"></script>
    <script src="~/Areas/Content/js/easy-pie-chart.js"></script>
    <script src="~/Areas/Content/js/count.js"></script>

    <script>



        jQuery(document).ready(function () {
            EditableTable.init();
        });

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

</body>
</html>
