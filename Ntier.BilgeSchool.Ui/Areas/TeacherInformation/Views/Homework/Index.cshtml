@model IEnumerable<Ntier.BilgeSchool.Model.Entity.Homework>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/TeacherInformation/Views/Shared/_Layout.cshtml";
}

<h3 class="text-primary"><b>Öğrenci Ödev Liste</b></h3>
<br />

<p>
    @Html.ActionLink("Yeni Kayıt +", "Create")
</p>



<div class="panel-body">
    <div class="adv-table editable-table ">
        <div class="space15"></div>
        <table class="table table-striped table-hover table-bordered" id="editable-sample">
            <thead>
                <tr>
                    <th>Öğrenci No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Ders</th>
                    <th>Açıklama</th>
                    <th>Dosya Yolu</th>
                    <th>Teslim Tarihi</th>
                    <th>Duzenle</th>
                    <th>Detay</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                
                
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem =>item.Student.StudentNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.StudentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.StudentLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FilePath)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.DeadLine)</td>
                           



                            <td>@Html.ActionLink("Düzenle", "Edit", new { id = item.ID })</td>
                            <td>@Html.ActionLink("Detay", "Details", new { id = item.ID })</td>
                            <td>@Html.ActionLink("Sil", "Delete", new { id = item.ID })</td>
                        </tr>
                    }
                

            </tbody>
        </table>
    </div>
</div>